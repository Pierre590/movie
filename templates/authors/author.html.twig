{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block stylesheets %}
    <style>

    body {
        background-image: url('/img/merch-husey-Omy-jLERVBo-unsplash.jpg');
        background-attachment: fixed;
        background-size: cover;
    }
    .jumbotron {
        background-image: url('/img/denise-jans-8eQOBtgn9Qo-unsplash.jpg');
        background-size: cover;
    }
    .badge {
        border-radius: 15px;
    }

    .card img {
        width: 400px;.
    }
    .card {
        background-image: url('/img/denise-jans-8eQOBtgn9Qo-unsplash.jpg');
        background-size: cover;
    }

    </style>


{% endblock %}

{% block body %}
<div class="container">
    <nav class="navbar navbar-light bg-dark text-light mb-4">
        <a class="navbar-brand text-light"href="/movies">Home</a>
        <form class="form-inline my-2 my-lg-0" action="{{path('movies')}}" method="get" >
           <input name="search" class="form-control mr-sm-2"  type="search" placeholder="Rechercher">
           <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Rechercher</button>
         </form>
    </nav>
</div>

<div class="title text-center text-light mb-3">
    <h1>LE CINE DU QUARTIER</h1>
</div>

<div class="container">
    <div class="card mt-5">
        <div class="row">
            <div class="col md-6 text-center">
                <img class="image" src="{{author.photo}}">
            </div>
            <div class="col md-6">
                <h1 class="card-header text-light text-center font-weight-bold">{{author.name}}</h1>
                    <div class="card-body">
                        <h5 class="card-title text-center" style="background-color:white">{{author.nationality}} n√© le : {{author.birthday|date('d-m-Y')}}</h5>
                        <p class="card-text" style="background-color:white">{{author.biography}}</p>
                        <a href="{{author.link}}" class="btn btn-danger">En savoir plus</a>
                    </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
